<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bankcard.CardBagActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/cardbag"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_49">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_170"
            android:text="卡包"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/dp_19"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_19"
            android:background="@drawable/close"
            android:layout_marginLeft="@dimen/dp_130"
            />
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bank_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_7"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_weight="1"
        >
        <RelativeLayout
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_140">
            <ImageView
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_140"
                android:background="@drawable/bank_background"
                ></ImageView>
            <TextView
                android:id="@+id/main_bankname"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_22"
                android:text="北京农商银行"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_71"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_17"
                />
            <TextView
                android:id="@+id/main_banktype"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_71"
                android:layout_marginTop="@dimen/dp_47"
                android:text="卡类型"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/main_banknum"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:text="35453432435453453435"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_17"
                android:layout_marginLeft="@dimen/dp_71"
                android:layout_marginTop="@dimen/dp_94"
                />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F2F2F2"
        android:layout_gravity="center_horizontal"
        ></View>
    <LinearLayout
        android:id="@+id/add_bank"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="@dimen/dp_60">
        <Button
            android:id="@+id/add_new_bank"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_40"
            android:textColor="#ffffff"
            android:text="添加银行卡"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_63"
            android:background="@drawable/button_corner"

            />
    </LinearLayout>
    <ImageView
        android:id="@+id/bound_background"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_112"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_marginLeft="@dimen/dp_127"
        android:background="@drawable/unbound"
        />
    <Button
        android:id="@+id/boundcard"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_40"
        android:textColor="#ffffff"
        android:text="绑定银行卡"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_112"
        android:layout_marginLeft="@dimen/dp_63"
        android:background="@drawable/button_corner"
        />
</LinearLayout>