<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="match_parent"
    tools:context=".bankcard.VerifyBankActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">
        <ImageView
            android:layout_width="375dp"
            android:layout_height="@dimen/dp_200"
            android:background="@drawable/bankbackground"
            />
        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_60">
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/bback"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_13"
                />
        </RelativeLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_152"
            android:text="验证银行卡"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/dp_19"
            android:textSize="@dimen/sp_18" />
        <View
            android:layout_width="375dp"
            android:layout_height="1dp"
            android:background="#FF658CF2"
            android:layout_marginTop="@dimen/dp_64"
            ></View>
        <TextView
            android:id="@+id/card_name"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_28"
            android:text="您将绑定古天乐的银行卡"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_106"
            android:layout_marginLeft="@dimen/dp_30"
            />
    </RelativeLayout>
    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_width="@dimen/dp_345"
        android:layout_height="390dp"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_145"
        app:cardElevation="@dimen/dp_10"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_20"
                android:text="卡类型"
                android:textColor="#2F3133"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_16"
                />
            <LinearLayout
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_16"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="中国邮政银行"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#2F3033"
                    />
                <TextView
                    android:id="@+id/bank_type"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:text="储蓄卡"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#2F3033"
                    />
            </LinearLayout>
            <View
                android:layout_width="@dimen/dp_315"
                android:layout_height="1dp"
                android:background="#F0F2F5"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/sp_15"
                ></View>
            <TextView
                android:layout_width="@dimen/dp_105"
                android:layout_height="@dimen/dp_20"
                android:text="验证码"
                android:textColor="#2F3133"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_16"
                />
            <LinearLayout
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_16"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/verify_num"
                    android:layout_width="@dimen/dp_107"
                    android:layout_height="match_parent"
                    android:hint="请输入6位验证码"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:layout_weight="9"
                    android:textColor="#5E6166"
                    />
                <TextView
                    android:id="@+id/send_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="发送验证码"
                    android:textColor="#4979F2"
                    android:textSize="@dimen/sp_14"
                    android:background="@drawable/bg_identify_code_normal"
                    />
            </LinearLayout>
            <View
                android:layout_width="@dimen/dp_315"
                android:layout_height="1dp"
                android:background="#F0F2F5"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/sp_15"
                ></View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#5E6166"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《服务协议》"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#4979F2"
                    />

            </LinearLayout>
            <Button
                android:id="@+id/bank_true"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_40"
                android:text="同意协议并绑卡"
                android:textColor="#FEFEFE"
                android:textSize="16sp"
                android:background="@drawable/button_corner"
                android:layout_marginTop="@dimen/dp_158"
                android:layout_marginLeft="@dimen/dp_48"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>