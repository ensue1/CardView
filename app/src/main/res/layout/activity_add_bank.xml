<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="match_parent"
    tools:context=".bankcard.AddBankActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">
        <ImageView
            android:layout_width="375dp"
            android:layout_height="@dimen/dp_200"
            android:background="@drawable/bankbackground"
            />
        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_60">
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/bback"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_13"
                />
        </RelativeLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_152"
            android:text="添加银行卡"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/dp_19"
            android:textSize="@dimen/sp_18" />
        <View
            android:layout_width="375dp"
            android:layout_height="1dp"
            android:background="#FF658CF2"
            android:layout_marginTop="@dimen/dp_64"
            ></View>
        <TextView
            android:id="@+id/card_name"
            android:layout_width="@dimen/dp_202"
            android:layout_height="@dimen/dp_28"
            android:text="请绑定杨某人的银行卡"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_106"
            android:layout_marginLeft="@dimen/dp_30"
            />
    </RelativeLayout>
    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_width="@dimen/dp_345"
        android:layout_height="390dp"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_145"
        app:cardElevation="@dimen/dp_10"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_20"
                android:text="卡号"
                android:textColor="#2F3133"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_16"
                />
            <LinearLayout
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_16"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/bank_card"
                    android:layout_width="@dimen/dp_107"
                    android:layout_height="match_parent"
                    android:hint="请输入银行卡号"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:layout_weight="9"
                    />
                <ImageView
                    android:id="@+id/bank_camera"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/camera"
                    />
            </LinearLayout>
            <View
                android:layout_width="@dimen/dp_315"
                android:layout_height="1dp"
                android:background="#F0F2F5"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/sp_15"
                ></View>
            <TextView
                android:layout_width="@dimen/dp_105"
                android:layout_height="@dimen/dp_20"
                android:text="银行预留手机号"
                android:textColor="#2F3133"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_16"
                />
            <LinearLayout
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_16"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/pohne_num"
                    android:layout_width="@dimen/dp_107"
                    android:layout_height="match_parent"
                    android:hint="请输入11位手机号"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:layout_weight="9"
                    />
            </LinearLayout>
            <View
                android:layout_width="@dimen/dp_315"
                android:layout_height="1dp"
                android:background="#F0F2F5"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/sp_15"
                ></View>
            <Button
                android:id="@+id/bank_msg"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_40"
                android:text="验证信息"
                android:textColor="#FEFEFE"
                android:textSize="16sp"
                android:background="@drawable/button_corner"
                android:layout_marginTop="@dimen/dp_181"
                android:layout_marginLeft="@dimen/dp_48"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>