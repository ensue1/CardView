<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".authentication.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250">
        <ImageView
            android:layout_width="375dp"
            android:layout_height="@dimen/dp_250"
            android:background="@drawable/background"
            />
        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_60">
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/bback"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_13"
                />
        </RelativeLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_152"
            android:text="实名认证"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/dp_19"
            android:textSize="@dimen/sp_18" />
        <View
            android:layout_width="375dp"
            android:layout_height="1dp"
            android:background="#FF658CF2"
            android:layout_marginTop="@dimen/dp_64"
            ></View>

        <ImageView
            android:id="@+id/head"
            android:layout_width="@dimen/dp_127"
            android:layout_height="@dimen/dp_95"
            android:layout_marginLeft="@dimen/dp_125"
            android:layout_marginRight="@dimen/dp_124"
            android:layout_marginTop="@dimen/dp_97"
            android:background="@drawable/head" />
        <android.support.v7.widget.CardView
            android:id="@+id/user_renzheng"
            android:visibility="visible"

            app:cardCornerRadius="8dp"
            android:layout_width="@dimen/dp_330"
            android:layout_height="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_15">
            <RelativeLayout
                android:background="#99B6FF"
                android:layout_width="@dimen/dp_330"
                android:layout_height="@dimen/dp_150"
                >
                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@drawable/icon"
                    />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_toRightOf="@id/img_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="@dimen/dp_35"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_16"
                    />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_65"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toRightOf="@id/img_user"
                    android:textColor="#ffffffff"
                    android:text="41038119980216101x"
                    android:textSize="@dimen/sp_14"
                    />

                <View
                    android:id="@+id/line"
                    android:layout_width="@dimen/dp_305"
                    android:layout_height="1dp"
                    android:background="#A6BFFF"
                    android:layout_marginTop="@dimen/dp_105"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    ></View>

                <TextView
                    android:id="@+id/tv_safe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人隐私信息安全保障中"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_12"
                    android:layout_below="@id/line"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    />

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_12"
                    android:layout_toRightOf="@id/tv_safe"
                    android:layout_marginLeft="@dimen/dp_109"
                    android:layout_marginTop="@dimen/dp_122"
                    />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="@dimen/dp_11"
                    android:layout_toRightOf="@id/tv_more"
                    android:layout_marginTop="@dimen/dp_125"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:background="@drawable/right" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_250"
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_83">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_25"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="完善更多信息，体验更多服务"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#999999"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_38"
                android:textSize="@dimen/sp_14"
                android:text="未完善"
                android:textColor="#4F7CF9" />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_37"
                android:background="@drawable/left" />

        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_351"
            android:layout_height="1dp"
            android:background="#F2F2F2"
            android:layout_gravity="center_horizontal"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/dp_199"
                android:layout_height="@dimen/dp_83">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="证件照片"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="上传证件照片，体验更多特权"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/zjzp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_38"
                android:textSize="@dimen/sp_14"
                android:text="未完善"
                android:textColor="#4F7CF9" />
            <ImageView
                android:id="@+id/right"
                android:layout_width="8dp"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_37"
                android:background="@drawable/left" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#F2F2F2"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/dp_199"
                android:layout_height="@dimen/dp_83">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="人像照片"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="解锁刷脸科技，启用更多功能"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_38"
                android:textSize="@dimen/sp_14"
                android:text="未完善"
                android:textColor="#4F7CF9"/>
            <ImageView
                android:layout_width="8dp"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_37"
                android:background="@drawable/left" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2F2F2"
            ></View>
    </LinearLayout>
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20" />
</RelativeLayout>